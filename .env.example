# =============================================================================
# BackBone-AI Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your actual values
# WARNING: Never commit .env file to version control!

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
APP_NAME=BackBone-AI
APP_VERSION=0.1.0
APP_ENV=development  # development, staging, production
DEBUG=True
LOG_LEVEL=INFO

# -----------------------------------------------------------------------------
# API Settings
# -----------------------------------------------------------------------------
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=True  # Auto-reload on code changes (dev only)
API_WORKERS=1    # Number of worker processes

# -----------------------------------------------------------------------------
# LLM Provider Settings
# -----------------------------------------------------------------------------

# Default LLM Provider (openai, anthropic, google)
DEFAULT_LLM_PROVIDER=openai

# OpenAI
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_TEMPERATURE=0.1
OPENAI_MAX_TOKENS=4096

# Anthropic Claude
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022
ANTHROPIC_TEMPERATURE=0.1
ANTHROPIC_MAX_TOKENS=4096

# Google Gemini
GOOGLE_API_KEY=your-google-api-key-here
GOOGLE_MODEL=gemini-1.5-pro
GOOGLE_TEMPERATURE=0.1

# -----------------------------------------------------------------------------
# Agent Configuration
# -----------------------------------------------------------------------------

# Orchestrator Agent
ORCHESTRATOR_LLM_PROVIDER=anthropic
ORCHESTRATOR_MODEL=claude-3-5-sonnet-20241022
ORCHESTRATOR_MAX_ITERATIONS=10

# Schema Validator Agent
SCHEMA_VALIDATOR_LLM_PROVIDER=openai
SCHEMA_VALIDATOR_MODEL=gpt-4-turbo-preview

# Architect Agent
ARCHITECT_LLM_PROVIDER=openai
ARCHITECT_MODEL=gpt-4-turbo-preview

# Code Generator Agent
CODE_GENERATOR_LLM_PROVIDER=openai
CODE_GENERATOR_MODEL=gpt-4

# Validator Agent
VALIDATOR_LLM_PROVIDER=openai
VALIDATOR_MODEL=gpt-3.5-turbo

# -----------------------------------------------------------------------------
# Database Settings
# -----------------------------------------------------------------------------

# Generated Project Database (for testing)
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/backbone_generated
DATABASE_ECHO=False  # Set to True to log all SQL queries

# BackBone-AI Internal Database (optional, for storing projects)
INTERNAL_DB_URL=postgresql+asyncpg://user:password@localhost:5432/backbone_internal

# -----------------------------------------------------------------------------
# LangChain & LangSmith Settings
# -----------------------------------------------------------------------------

# LangSmith (Monitoring & Debugging)
LANGCHAIN_TRACING_V2=false  # Set to true to enable tracing
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com
LANGCHAIN_API_KEY=your-langsmith-api-key-here
LANGCHAIN_PROJECT=BackBone-AI

# -----------------------------------------------------------------------------
# Code Generation Settings
# -----------------------------------------------------------------------------

# Output directory for generated code
OUTPUT_DIR=./generated_projects

# Template directory
TEMPLATE_DIR=./templates

# Code formatting
AUTO_FORMAT=True  # Auto-format generated code with Black
AUTO_LINT=True    # Auto-lint generated code with Ruff

# -----------------------------------------------------------------------------
# Retry & Timeout Settings
# -----------------------------------------------------------------------------

# Agent retry settings
AGENT_MAX_RETRIES=3
AGENT_RETRY_DELAY=1  # seconds
AGENT_TIMEOUT=300     # seconds (5 minutes)

# LLM API retry settings
LLM_MAX_RETRIES=3
LLM_RETRY_DELAY=2

# -----------------------------------------------------------------------------
# Monitoring & Metrics
# -----------------------------------------------------------------------------

# Prometheus metrics
ENABLE_METRICS=False
METRICS_PORT=9090

# -----------------------------------------------------------------------------
# Security Settings
# -----------------------------------------------------------------------------

# API Authentication (if needed)
API_KEY=your-backbone-ai-api-key-here
ENABLE_AUTH=False

# CORS Settings
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]
CORS_ALLOW_CREDENTIALS=True
CORS_ALLOW_METHODS=["*"]
CORS_ALLOW_HEADERS=["*"]

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------

# Enable/disable features
ENABLE_STREAMING=True        # Stream agent progress
ENABLE_HUMAN_FEEDBACK=False  # Human-in-the-loop
ENABLE_TESTS_GENERATION=False  # Generate tests (future feature)

# -----------------------------------------------------------------------------
# Development & Testing
# -----------------------------------------------------------------------------

# Test mode
TEST_MODE=False

# Mock LLM responses (for testing without API calls)
MOCK_LLM=False
